<Window x:Class="bazagpr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bazagpr"
        mc:Ignorable="d"
        Title="Baza GPR" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name ="GPRDataGrid"  HorizontalAlignment="Left" Height="260"
                  Margin="10,67,0,0" VerticalAlignment="Top" Width="430"/>
        <Button x:Name="refresh_btn" Content="Odśwież" HorizontalAlignment="Left"
                Margin="20,20,0,0" VerticalAlignment="Top" Width="75"
                RenderTransformOrigin="-0.267,1.6" Click="Refresh_btn_Click"/>
        <Label Content="Nazwa:" HorizontalAlignment="Left" Margin="450,75,0,0" VerticalAlignment="Top"/>
        <Label Content="Data:" HorizontalAlignment="Left" Margin="450,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Typ profilu:" HorizontalAlignment="Left" Margin="450,145,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="nazwa_txtbx" HorizontalAlignment="Left" Height="20" Margin="500,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"
                 Width="75" RenderTransformOrigin="0.042,0.435"/>
        <DatePicker x:Name="data_date_picker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="488,112,0,0" Width="87"/>
        <ComboBox x:Name="tp_txtbx" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Margin="520,148,0,0" SelectionChanged="ComboBox_SelectionChanged"
                 Width="55"/>
    </Grid>
</Window>
